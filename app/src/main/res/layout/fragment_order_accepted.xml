<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".ui.fragments.OrderAcceptedFragment">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_order_accepted" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:minLines="2"
            android:text="Your Order has been \naccepted"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:fontFamily="@font/opensans_bold" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:minLines="2"
            android:text="Your items has been placcd and is on \nitâ€™s way to being processed"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:fontFamily="@font/montserrat_regular" />




    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginHorizontal="44dp"
        android:text="Track Order"
        android:textSize="16sp"
        app:backgroundTint="@color/green"
        app:cornerRadius="8dp"
         />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginHorizontal="44dp"
        android:layout_marginBottom="30dp"
        android:text="Back To Home"
        android:background="@color/transparent"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:cornerRadius="8dp"
      />

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>